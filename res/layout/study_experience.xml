<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.job.view.BackLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    
	    <TextView 
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
	        android:text="@string/study_experience"
	        android:textSize="20sp"
	        android:layout_centerInParent="true"
	        android:textColor="@color/whites" 
	        />
	    
	    
	</com.job.view.BackLayout>
 	
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/dcn_login_box_bg"
        android:padding="0dp"
           >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />
                
                <RelativeLayout
                    android:id="@+id/specialize_student"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:textColor="@color/dcn_light_black"
                        android:paddingLeft="10dip"
                        android:gravity="center_vertical"
                        android:text="@string/specialize_student" />

                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:src="@drawable/dcn_right_arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />
                
                 <RelativeLayout
                     android:id="@+id/undergraduates"
                     android:layout_width="match_parent"
                     android:layout_height="45dp"
                     android:background="@drawable/dcn_back_btn_selector"
                     android:clickable="true" >

                     <ImageView
                         android:id="@+id/imageView1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                         android:layout_marginRight="10dp"
                         android:src="@drawable/dcn_right_arrow" />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_alignParentLeft="true"
                         android:layout_alignTop="@+id/imageView1"
                         android:gravity="center_vertical"
                         android:paddingLeft="10dip"
                         android:text="@string/undergraduates"
                         android:textColor="@color/dcn_light_black"
                         android:textSize="16sp" />
                 </RelativeLayout>
                 
                 <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />

                <RelativeLayout
                    android:id="@+id/research_student"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/dcn_message_center_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:textColor="@color/dcn_light_black"
                        android:paddingLeft="10dip"
                        android:gravity="center_vertical"
                        android:text="@string/research_student" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dcn_right_arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp" />
                    
                </RelativeLayout>
                 </LinearLayout>
      
</LinearLayout>
 