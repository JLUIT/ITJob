<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.job.view.BackLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    
	    <TextView 
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
	        android:text="@string/study_experience"
	        android:textSize="20sp"
	        android:layout_centerInParent="true"
	        android:textColor="@color/whites" 
	        />
	    
	    <TextView 
	        android:id="@+id/save"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
	        android:text="@string/save"
	        android:textSize="17sp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:textColor="@color/whites" 
	        />
	    
	</com.job.view.BackLayout>
	
    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="5dp"
	    android:orientation="horizontal">

        <Button
            android:id="@+id/tag1"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner"
            android:text="@string/five_one"
            android:textSize="14sp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shadowcolor" />

        <Button
            android:id="@+id/tag2"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner"
            android:text="@string/transtation_butie"
            android:textSize="14sp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shadowcolor" />

        <Button
            android:id="@+id/tag3"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner"
            android:text="@string/restaurant"
            android:textSize="14sp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shadowcolor" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="6dp"
	    android:layout_marginLeft="5dp"
	    android:orientation="horizontal">

        <Button
            android:id="@+id/tag4"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner"
            android:text="@string/expert_train"
            android:textSize="14sp"
            
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shadowcolor" />

        <Button
            android:id="@+id/tag5"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner"
            android:text="@string/member_trip"
            android:textSize="14sp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shadowcolor" />

        <Button
            android:id="@+id/tag6"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_corner"
            android:text="@string/year_money"
            android:textSize="14sp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/shadowcolor" />
        
    </LinearLayout>
    

</LinearLayout>
