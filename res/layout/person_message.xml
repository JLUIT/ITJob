<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.job.view.BackLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="@string/person_center"
            android:textColor="@color/whites"
            android:textSize="20sp" />
    </com.job.view.BackLayout>

    <RelativeLayout
        android:id="@+id/dcn_ucenter_user_info_item"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dcn_login_box_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/dcn_user_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/dcn_ucenter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dcn_login_box_bg"
                android:orientation="vertical"
                android:padding="0dp" >

                <RelativeLayout
                    android:id="@+id/apply_job"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/dcn_change_password_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:text="@string/my_job"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_job"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/dcn_change_password_text"
                        android:layout_marginLeft="45dp"
                        android:gravity="center"
                        android:text="Android开发"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/dcn_right_arrow_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dcn_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />

                <RelativeLayout
                    android:id="@+id/inapply_job"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/dcn_binding_phone_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:text="@string/my_college"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_school"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="45dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/dcn_binding_phone_number_text"
                        android:text="吉林大学"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/dcn_right_arrow_image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dcn_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />

                <RelativeLayout
                    android:id="@+id/resume"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/dcn_set_security_question_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:text="@string/my_expert"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_pro"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/dcn_set_security_question_text"
                        android:layout_marginLeft="45dp"
                        android:gravity="center"
                        android:text="软件工程"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/dcn_right_arrow_image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dcn_right_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dcn_login_box_bg"
                android:orientation="vertical"
                android:padding="0dp" >

                <RelativeLayout
                    android:id="@+id/change_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/dcn_set_payment_password_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:text="@string/phone_num"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                        android:layout_marginLeft="45dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/dcn_set_payment_password_text"
                        android:text="18844546466"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/dcn_right_arrow_image6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dcn_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />

                <RelativeLayout
                    android:id="@+id/change_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:text="@string/email_add"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/email"
                        android:text="1964316663@qq.com"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dcn_right_arrow" />

                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dcn_color_login_box_gb" />

                <RelativeLayout
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/dcn_back_btn_selector"
                    android:clickable="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="10dip"
                        android:text="@string/change_password"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/dcn_right_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>